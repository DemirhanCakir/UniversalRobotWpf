<Window x:Class="UniversalRobotWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:universalrobotwpf="clr-namespace:UniversalRobotWpf"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Universal Robots Test" Height="650" Width="950">
    <Window.DataContext>
        <universalrobotwpf:UR_interface/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Connection Section -->
        <GroupBox Header="Robot Connection" Grid.Row="0" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Robot IP:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding RobotIp}" Grid.Row="0" Grid.Column="1" Margin="5,0"/>
                <Button Content="Connect" Grid.Row="0" Grid.Column="2" Command="{Binding ConnectCommand}" Margin="5,0"/>

                <Label Content="Status:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ConnectionStatus}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="5,0"/>
                <Button Content="Disconnect" Grid.Row="1" Grid.Column="2" Command="{Binding DisconnectCommand}" Margin="5,0"/>

            </Grid>
        </GroupBox>
        <GroupBox Header="Robot Mode" Margin="0,0,0,10" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Button Content="Play" Command="{Binding PlayCommand}" Grid.Row="0" Grid.Column="0" Width="40"  Margin="5"/>
                <Button Content="Pause" Command="{Binding PauseCommand}" Grid.Row="0" Grid.Column="1" Width="40" Margin="5"/>
                <Button Content="Stop" Command="{Binding StopCommand}" Grid.Row="0" Grid.Column="2" Width="40" Margin="5"/>
                <Label Content="Mode:" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center"/>
                <TextBox Text="{Binding RobotMode}" Grid.Row="0" Grid.Column="4" Margin="5,0" TextChanged="TextBox_TextChanged"/>
                <Label Content="State:" Grid.Row="0" Grid.Column="5" VerticalAlignment="Center"/>
                <TextBox Text="{Binding ProgramState}" Grid.Row="0" Grid.Column="6" Margin="5,0" TextChanged="TextBox_TextChanged"/>
                <Button Content="Power ON" Command="{Binding PowerOnCommand}" Grid.Row="1" Grid.Column="0" Width="60" Margin="5"/>
                <Button Content="Power OFF" Command="{Binding PowerOffCommand}" Grid.Row="1" Grid.Column="1" Width="60" Margin="5"/>
                <Button Content="Breake Release" Command="{Binding BreakeReleaseCommand}" Grid.Row="1" Grid.Column="2" Width="85" Margin="5"/>
            </Grid>
        </GroupBox>
            <!-- Real-time Data Section -->
        <GroupBox Header="Real-time Data" Grid.Row="2" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Pose Data -->
                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                    <TextBlock Text="Current Pose:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding PoseData}" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Joint Data -->
                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <TextBlock Text="Joint Positions:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding JointData}" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Log and Controls Section -->
        <!-- Log and Controls Section -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Log Section -->
            <GroupBox Header="Log" Grid.Column="0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding LogMessages}" TextWrapping="Wrap" FontFamily="Consolas"/>
                </ScrollViewer>
            </GroupBox>

            <!-- Checkbox Sections + Register UI -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <!-- Yeni satır -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Config Output -->
                    <GroupBox Grid.Row="0" Grid.Column="0" Header="Config Output" Margin="150, 0, 0, 0">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox Content="0" IsChecked="{Binding ConfigOut0, Mode=TwoWay}" Grid.Row="0" Grid.Column="0" Margin="5"/>
                                <CheckBox Content="4" IsChecked="{Binding ConfigOut4, Mode=TwoWay}" Grid.Row="0" Grid.Column="1" Margin="5"/>
                                <CheckBox Content="1" IsChecked="{Binding ConfigOut1, Mode=TwoWay}" Grid.Row="1" Grid.Column="0" Margin="5"/>
                                <CheckBox Content="5" IsChecked="{Binding ConfigOut5, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" Margin="5"/>
                                <CheckBox Content="2" IsChecked="{Binding ConfigOut2, Mode=TwoWay}" Grid.Row="2" Grid.Column="0" Margin="5"/>
                                <CheckBox Content="6" IsChecked="{Binding ConfigOut6, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" Margin="5"/>
                                <CheckBox Content="3" IsChecked="{Binding ConfigOut3, Mode=TwoWay}" Grid.Row="3" Grid.Column="0" Margin="5"/>
                                <CheckBox Content="7" IsChecked="{Binding ConfigOut7, Mode=TwoWay}" Grid.Row="3" Grid.Column="1" Margin="5"/>
                            </Grid>
                        </Border>
                    </GroupBox>

                    <GroupBox Header="Digital Output" Grid.Row="0" Grid.Column="1" Margin="10,0,160,0">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox Content="0" IsChecked="{Binding DigitalOut0, Mode=TwoWay}" Grid.Row="0" Grid.Column="0" Margin="5"/>
                                <CheckBox Content="4" IsChecked="{Binding DigitalOut4, Mode=TwoWay}" Grid.Row="0" Grid.Column="1" Margin="5"/>
                                <CheckBox Content="1" IsChecked="{Binding DigitalOut1, Mode=TwoWay}" Grid.Row="1" Grid.Column="0" Margin="5"/>
                                <CheckBox Content="5" IsChecked="{Binding DigitalOut5, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" Margin="5"/>
                                <CheckBox Content="2" IsChecked="{Binding DigitalOut2, Mode=TwoWay}" Grid.Row="2" Grid.Column="0" Margin="5"/>
                                <CheckBox Content="6" IsChecked="{Binding DigitalOut6, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" Margin="5"/>
                                <CheckBox Content="3" IsChecked="{Binding DigitalOut3, Mode=TwoWay}" Grid.Row="3" Grid.Column="0" Margin="5"/>
                                <CheckBox Content="7" IsChecked="{Binding DigitalOut7, Mode=TwoWay}" Grid.Row="3" Grid.Column="1" Margin="5"/>
                            </Grid>
                        </Border>
                    </GroupBox>

                    <!-- Register İşlemleri -->
                    <GroupBox Header="Register Configuration" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Yazma Paneli -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Register Set" FontWeight="Bold" Margin="0,0,0,6"/>
                                    <UniformGrid Rows="4" Columns="2" Margin="0,0,0,6">
                                        <TextBlock Text="Type:" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding RegType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                                        <TextBlock Text="ID:" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding RegId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                                        <TextBlock Text="Value:" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding RegValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                                        <TextBlock Text=""/>
                                        <Button x:Name="WriteRegisterButton"
                                                Content="Set"
                                                Width="80"
                                                HorizontalAlignment="Left"
                                                Command="{Binding SetRegisterCommand}"/>
                                    </UniformGrid>
                                </StackPanel>

                                <!-- Okuma Paneli -->
                                <StackPanel Grid.Row="0" Grid.Column="1">
                                    <TextBlock FontWeight="Bold" Margin="0,0,0,6">
                                        <Run Language="tr-tr" Text="Variable"/><Run Text=" Get"/>
                                    </TextBlock>
                                    <UniformGrid Rows="4" Columns="2" Margin="0,0,0,6">
                                        <TextBlock Text=""/>
                                        <TextBlock Text=""/>

                                        <TextBlock Text="Variable Name:" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding Variable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="120"
                                                 ToolTip="Bool: 64-127  |  Int: 24-47  |  Double: 24-47"/>
                                        <TextBlock Text=""/>
                                        <TextBlock Text=""/>
                                        <TextBlock Text=""/>
                                        <Button x:Name="ReadRegisterButton"
                                                Content="Get"
                                                Width="80"
                                                HorizontalAlignment="Left"
                                                Command="{Binding GetRegisterCommand}"/>
                                    </UniformGrid>
                                </StackPanel>

                                <!-- (İsteğe bağlı ek açıklama) -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Margin="0,4,0,0"
                                           FontSize="11"
                                           Foreground="Gray"
                                           Text="ID Range: Bool 64-127 | Int 24-47 | Double 24-47"/>
                            </Grid>
                        </Border>
                    </GroupBox>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>