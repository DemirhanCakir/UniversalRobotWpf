<Window x:Class="UniversalRobotWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:universalrobotwpf="clr-namespace:UniversalRobotWpf"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Universal Robots Test" Height="450" Width="800">
    <Window.DataContext>
        <universalrobotwpf:MainViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Connection Section -->
        <GroupBox Header="Robot Connection" Grid.Row="0" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Robot IP:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding RobotIp}" Grid.Row="0" Grid.Column="1" Margin="5,0"/>
                <Button Content="Connect" Grid.Row="0" Grid.Column="2" Command="{Binding ConnectCommand}" Margin="5,0"/>

                <Label Content="Status:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ConnectionStatus}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="5,0"/>
                <Button Content="Disconnect" Grid.Row="1" Grid.Column="2" Command="{Binding DisconnectCommand}" Margin="5,0"/>

            </Grid>
        </GroupBox>

        <!-- Real-time Data Section -->
        <GroupBox Header="Real-time Data" Grid.Row="1" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Pose Data -->
                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                    <TextBlock Text="Current Pose:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding PoseData}" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Joint Data -->
                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <TextBlock Text="Joint Positions:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding JointData}" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Log and Controls Section -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Log Section -->
            <GroupBox Header="Log" Grid.Column="0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding LogMessages}" TextWrapping="Wrap" FontFamily="Consolas"/>
                </ScrollViewer>
            </GroupBox>

            <!-- Checkbox Sections -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                <!-- Config Output Section -->
                <GroupBox Header="Config Output">
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox Content="0" IsChecked="{Binding ConfigOut0, Mode=TwoWay}" Grid.Row="0" Grid.Column="0" Margin="5"/>
                            <CheckBox Content="4" IsChecked="{Binding ConfigOut4, Mode=TwoWay}" Grid.Row="0" Grid.Column="1" Margin="5"/>
                            <CheckBox Content="1" IsChecked="{Binding ConfigOut1, Mode=TwoWay}" Grid.Row="1" Grid.Column="0" Margin="5"/>
                            <CheckBox Content="5" IsChecked="{Binding ConfigOut5, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" Margin="5"/>
                            <CheckBox Content="2" IsChecked="{Binding ConfigOut2, Mode=TwoWay}" Grid.Row="2" Grid.Column="0" Margin="5"/>
                            <CheckBox Content="6" IsChecked="{Binding ConfigOut6, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" Margin="5"/>
                            <CheckBox Content="3" IsChecked="{Binding ConfigOut3, Mode=TwoWay}" Grid.Row="3" Grid.Column="0" Margin="5"/>
                            <CheckBox Content="7" IsChecked="{Binding ConfigOut7,  Mode=TwoWay}" Grid.Row="3" Grid.Column="1" Margin="5"/>
                        </Grid>
                    </Border>
                </GroupBox>

                <!-- Digital Output Section -->
                <GroupBox Header="Digital Output" Margin="10,0,0,0">
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox Content="0" IsChecked="{Binding DigitalOut0, Mode=TwoWay}" Grid.Row="0" Grid.Column="0" Margin="5"/>
                            <CheckBox Content="4" IsChecked="{Binding DigitalOut4, Mode=TwoWay}" Grid.Row="0" Grid.Column="1" Margin="5"/>
                            <CheckBox Content="1" IsChecked="{Binding DigitalOut1, Mode=TwoWay}" Grid.Row="1" Grid.Column="0" Margin="5"/>
                            <CheckBox Content="5" IsChecked="{Binding DigitalOut5, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" Margin="5"/>
                            <CheckBox Content="2" IsChecked="{Binding DigitalOut2, Mode=TwoWay}" Grid.Row="2" Grid.Column="0" Margin="5"/>
                            <CheckBox Content="6" IsChecked="{Binding DigitalOut6, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" Margin="5"/>
                            <CheckBox Content="3" IsChecked="{Binding DigitalOut3, Mode=TwoWay}" Grid.Row="3" Grid.Column="0" Margin="5"/>
                            <CheckBox Content="7" IsChecked="{Binding DigitalOut7, Mode=TwoWay}" Grid.Row="3" Grid.Column="1" Margin="5"/>
                        </Grid>
                    </Border>
                </GroupBox>
            </StackPanel>
        </Grid>
    </Grid>
</Window>